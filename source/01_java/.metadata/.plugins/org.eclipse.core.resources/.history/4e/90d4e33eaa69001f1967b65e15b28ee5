package com.lec.ex1_student;
// 데이터 : name(String), kor(int), eng(int), mat(int), tot(int), avg(double;소수점)
// 생성자 : new Student("정우성", 90, 90, 90)
// method : inforPrint(), inforString()
public class Student {
	// 데이터(속성, 인스턴스변수)
	private String  name;
	private int     kor;
	private int 	eng;
	private int		mat;
	private int 	tot;
	private double	avg;
	
	// 생성자 함수
	public Student() {} // 디폴트 생성자 // 필수는 아니지만 상속 시 편해
	public Student(String name, int kor, int eng, int mat) {
		this.name = name;
		this.kor = kor;
		this.eng = eng;
		this.mat = mat;
		tot = kor + eng + mat;
		avg = (double)tot/3; // 정수-정수 연산은 정수가 되어 데이터가 손실될 수 있음 
	}
}
